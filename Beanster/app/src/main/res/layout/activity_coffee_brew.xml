<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefcc"
    tools:context="com.example.ndonaldson.beanster.CoffeeBrew">


    <Button
        android:id="@+id/buttonBrew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle"
        android:textColor="#ffefcc"
        android:text="Brew"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle"
        android:textColor="#ffefcc"
        android:text="Disconnect"
        android:width="110dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.838"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indicatorLayout" />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="946dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/indicatorLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <com.warkiz.widget.IndicatorStayLayout
        android:id="@+id/indicatorLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
    <com.warkiz.widget.IndicatorSeekBar
        android:id="@+id/slider1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isb_max="100"
        app:isb_min="1.0"
        app:isb_progress="25"
        app:isb_seek_smoothly="true"
        app:isb_ticks_count="2"
        app:isb_show_tick_marks_type="oval"
        app:isb_tick_marks_color="@android:color/holo_blue_light"
        app:isb_tick_marks_size="13dp"
        app:isb_show_tick_texts="true"
        app:isb_tick_texts_size="15sp"
        app:isb_tick_texts_color="@color/colorPrimary"
        app:isb_thumb_color="#9f6934"
        app:isb_thumb_size="20dp"
        app:isb_show_indicator="circular_bubble"
        app:isb_indicator_color="@android:color/black"
        app:isb_indicator_text_color="@android:color/holo_blue_light"
        app:isb_indicator_text_size="18sp"
        app:isb_track_background_color="@android:color/black"
        app:isb_track_background_size="2dp"
        app:isb_track_progress_color="#9f6934"
        app:isb_track_progress_size="4dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.452" />
    </com.warkiz.widget.IndicatorStayLayout>


</android.support.constraint.ConstraintLayout>
