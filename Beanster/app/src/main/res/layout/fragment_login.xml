<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.example.ndonaldson.beanster.fragments.LoginFragment">


    <ImageView
        android:id="@+id/image3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/beans"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragmentUserName"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:inputType="text|textNoSuggestions"
        android:maxLength="10"
        android:layout_marginTop="124dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:hint="Username"
        android:layout_marginEnd="100dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/fragmentUserName"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        android:maxLength="10"
        android:inputType="text|textNoSuggestions"
        android:singleLine="true"
        android:hint="Password"
        android:id="@+id/fragmentPassword"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/fragmentPassword">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/fragmentCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/buttonstyle"
                android:textColor="#ffefcc"
                android:text="Cancel"
                android:layout_gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/fragmentLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonstyle"
                android:textColor="#ffefcc"
                android:text="Login"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:id="@+id/fragmentCreateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/buttonstyle"
                android:textColor="#ffefcc"
                android:text="Create"
                android:layout_gravity="left"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
